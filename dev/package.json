{
	"name": "root",
	"private": true,
	"scripts": {
		"clean": "git clean -f -d -X",
		"docusaurus": "npm run gen:doc && docusaurus",
		"start": "npm run gen:doc && docusaurus start --no-open",
		"startonly": "docusaurus start --no-open",
		"build": "rimraf build && cp node_modules/@public-ui/components/cheat-sheet.html static/cheat-sheet/index.html && npm run gen:doc && docusaurus build && node scripts/update.meta.js && node scripts/minify.js",
		"swizzle": "npm run gen:doc && docusaurus swizzle",
		"deploy": "npm run gen:doc && docusaurus deploy",
		"clear": "npm run gen:doc && docusaurus clear",
		"serve": "npm run gen:doc && docusaurus serve",
		"write-translations": "npm run gen:doc && docusaurus write-translations",
		"write-heading-ids": "npm run gen:doc && docusaurus write-heading-ids",
		"format": "prettier blog docs src -c",
		"lint": "eslint src",
		"ncu:major": "ncu",
		"ncu:minor": "ncu -t minor -u",
		"ncu:patch": "ncu -t patch -u",
		"gen:doc": "node scripts/autogen.doc.js && cpy \"spin/**\" readmes/spin/ --cwd=hotfix && npm run format -- -w",
		":prepack": "npm run build",
		"ts-prune": "ts-prune src",
		"postinstall": "npm-run-all postinstall:*",
		"postinstall:components-assets": "cpy \"node_modules/@public-ui/components/assets/**/*\" static/assets --dot",
		"postinstall:themes-assets": "cpy \"node_modules/@public-ui/themes/assets/**/*\" static/assets --dot",
		"update": "pnpm ncu:patch && pnpm ncu:minor && pnpm ncu:major"
	},
	"dependencies": {
		"@algolia/client-search": "4.17.1",
		"@docusaurus/core": "2.4.1",
		"@docusaurus/eslint-plugin": "2.4.1",
		"@docusaurus/plugin-client-redirects": "2.4.1",
		"@docusaurus/plugin-ideal-image": "2.4.1",
		"@docusaurus/plugin-pwa": "2.4.1",
		"@docusaurus/preset-classic": "2.4.1",
		"@docusaurus/theme-mermaid": "2.4.1",
		"@docusaurus/theme-translations": "2.4.1",
		"@leanup/form": "1.3.44",
		"@leanup/kolibri-components": "1.0.5",
		"@leanup/kolibri-react": "1.0.5",
		"@mdx-js/react": "1.6.22",
		"@monaco-editor/react": "4.5.1",
		"@public-oss/kolibri-themes": "0.0.3",
		"@public-ui/components": "1.5.2-rc.1",
		"@public-ui/react": "1.5.2-rc.1",
		"@public-ui/themes": "1.5.2-rc.1",
		"clsx": "1.2.1",
		"mermaid": "10.2.0",
		"prettier": "2.8.8",
		"react": "18.2.0",
		"react-dom": "18.2.0"
	},
	"devDependencies": {
		"@commitlint/cli": "17.6.3",
		"@commitlint/config-conventional": "17.6.3",
		"@docsearch/react": "3.4.0",
		"@docusaurus/module-type-aliases": "2.4.1",
		"@tsconfig/docusaurus": "1.0.7",
		"@types/node": "18.16.15",
		"@types/prettier": "2.7.2",
		"@typescript-eslint/eslint-plugin": "5.59.7",
		"@typescript-eslint/parser": "5.59.7",
		"autoprefixer": "10.4.14",
		"cpy-cli": "4.2.0",
		"depcheck": "1.4.3",
		"docusaurus-plugin-sass": "0.2.3",
		"eslint": "8.41.0",
		"eslint-plugin-jsx-a11y": "6.7.1",
		"eslint-plugin-mdx": "2.1.0",
		"eslint-plugin-react": "7.32.2",
		"html-minifier-terser": "7.2.0",
		"husky": "8.0.3",
		"license-report": "6.4.0",
		"lint-staged": "13.2.2",
		"npm-check-updates": "16.10.12",
		"npm-run-all": "4.1.5",
		"postcss": "8.4.23",
		"prop-types": "15.8.1",
		"rimraf": "3.0.2",
		"sass": "1.62.1",
		"tailwindcss": "3.3.2",
		"ts-prune": "0.10.3",
		"typescript": "5.0.4",
		"webpack": "5.84.1"
	},
	"browserslist": {
		"production": [
			">0.5%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"engines": {
		"node": ">=16.14"
	},
	"files": [
		"build/"
	],
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	}
}
